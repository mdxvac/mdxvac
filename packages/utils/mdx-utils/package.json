{
  "name": "@mdxvac/mdx-utils",
  "version": "0.0.2",
  "description": "Utilities to work with MDX files",
  "homepage": "https://mdxvac.netlify.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdxvac/mdxvac/tree/main/packages/utils/remark"
  },
  "author": "christian@hackyourshack.org",
  "license": "MIT",
  "keywords": [
    "utilities",
    "remark",
    "typescript"
  ],
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "concurrently \"pnpm:build:*\"",
    "build:modules": "vite build",
    "build:types": "tsc",
    "clean": "rimraf -rf ./dist/",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@mdxvac/esm-utils": "workspace:*",
    "unist-util-visit": "^4.1.1"
  },
  "devDependencies": {
    "@types/estree": "^1.0.0",
    "@types/mdast": "^3.0.10",
    "@types/unist": "2.0.6",
    "@vitest/ui": "^0.23.2",
    "concurrently": "^7.4.0",
    "eslint-config-base": "workspace:*",
    "mdast-util-mdx": "^2.0.0",
    "remark": "^14.0.2",
    "remark-mdx": "^2.1.3",
    "rimraf": "^3.0.2",
    "tsconfig": "workspace:*",
    "typescript": "^4.8.3",
    "vite": "^3.1.1",
    "vite-config": "workspace:*",
    "vitest": "^0.23.2"
  }
}
