{
  "name": "@mdxvac/fs-utils",
  "version": "0.0.2",
  "description": "Caching file system access",
  "homepage": "https://mdxvac.netlify.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdxvac/mdxvac/tree/main/packages/utils/fs-utils"
  },
  "author": "christian@hackyourshack.org",
  "license": "MIT",
  "keywords": [
    "utilities",
    "cache",
    "filesystem",
    "typescript"
  ],
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "concurrently \"pnpm:build:*\"",
    "build:modules": "vite build",
    "build:types": "tsc",
    "clean": "rimraf -rf ./dist/",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "@mdxvac/mem-cache": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "18.7.15",
    "@vitest/ui": "^0.23.2",
    "concurrently": "^7.4.0",
    "eslint-config-base": "workspace:*",
    "rimraf": "^3.0.2",
    "tsconfig": "workspace:*",
    "typescript": "^4.8.3",
    "vite": "^3.1.1",
    "vite-config": "workspace:*",
    "vitest": "^0.23.2"
  }
}
